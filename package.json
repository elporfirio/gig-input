{
  "name": "gig-input",
  "version": "0.1.1",
  "description": "Gigigo Webcomponent to manage input",
  "main": "gulpfile.js",
  "scripts": {
    "test": "npm run lint-polymer",
    "release": "./node_modules/.bin/gulp release",
    "postinstall": "./node_modules/.bin/bower install",
    "check-bower-deps": "ncu -m bower",
    "check-npm-deps": "ncu",
    "update-deps": "ncu -u && ncu -m bower -u",
    "serve": "ws -p 3001",
    "lint-polymer": "polylint --root src/ gig-input.html gig-input-color-behavior.html gig-input-date-behavior.html gig-input-style.html",
    "release:patch": "npm version patch -m \"chore(release): Bump to %s\"",
    "release:minor": "npm version minor -m \"chore(release): Bump to %s\"",
    "release:major": "npm version major -m \"chore(release): Bump to %s\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gigigo-html5/gig-input.git"
  },
  "author": "Pedro José Peña Jerez <pedro.jose@gigigo.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gigigo-html5/gig-input/issues"
  },
  "devDependencies": {
    "bower": "^1.7.7",
    "dateformat": "^1.0.12",
    "gulp": "^3.9.1",
    "gulp-header": "^1.7.1",
    "gulp-replace": "^0.5.4",
    "local-web-server": "^1.2.1",
    "npm-check-updates": "^2.6.1",
    "polylint": "^2.10.1"
  },
  "homepage": "https://github.com/gigigo-html5/gig-input"
}
